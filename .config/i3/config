assign [class="firefox-private"] $wksp2

assign [class="KeePass2"] $wksp7

assign [class="firefox-whatsapp"] $wksp8
assign [class="TelegramDesktop"] $wksp8

assign [class="Nautilus"] $wksp9

for_window [title="MOC.*"] move to workspace $wksp0

assign [class="Transmission-gtk"] $wksp-p2p

# Autoexec
exec --no-startup-id "~/Telegram/Telegram"
exec "nautilus --no-desktop"
exec --no-startup-id firefox --class="firefox-default" -P "default"
exec --no-startup-id firefox --class="firefox-private" -P "firefox-private" -private-window https://duckduckgo.com
exec --no-startup-id firefox --class="firefox-whatsapp" -P "firefox-whatsapp" -private-window https://web.whatsapp.com
exec --no-startup-id "gnome-terminal -e mocp"
exec --no-startup-id i3-msg 'workspace $wksp3; exec i3-sensible-terminal'

set $mode_system System (l) lock, (s) suspend, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
  bindsym l exec --no-startup-id ~/.config/i3/i3exit.sh lock, mode "default"
  bindsym s exec --no-startup-id ~/.config/i3/i3exit.sh suspend, mode "default"
  bindsym r exec --no-startup-id ~/.config/i3/i3exit.sh reboot, mode "default"
  bindsym Shift+s exec --no-startup-id ~/.config/i3/i3exit.sh shutdown, mode "default"
  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"

